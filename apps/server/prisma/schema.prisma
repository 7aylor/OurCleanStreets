generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("OCS_DB")
}

model books {
  id     Int    @id(map: "test_pk")
  title  String @db.VarChar
  author String @db.VarChar
}

model Users {
  id             String          @id @default(uuid())
  email          String          @unique
  passwordHash   String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}